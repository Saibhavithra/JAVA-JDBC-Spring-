	 private static String displayAll(Phonebook mainobj) {
	        String allContacts = "Here are all available contacts:";
	        List<Contact >contacts = mainobj.getAllContacts();
	        for (Contact contact: contacts) {
	            allContacts += "\n" + contact;
	        }
	        return allContacts;
	    }
   
      
        
     }    



